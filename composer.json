{
    "name": "igniterlabs/ti-ext-smsnotify",
    "type": "tastyigniter-package",
    "description": "Send SMS notifications to both restaurant and customer about an order or reservation.",
    "license": "MIT",
    "authors": [
        {
            "name": "Igniter Labs Team"
        }
    ],
    "keywords": [
        "tastyigniter",
        "notify",
        "notification"
    ],
    "require": {
        "tastyigniter/core": "^v4.0@beta || ^v4.0@dev",
        "tastyigniter/ti-ext-automation": "^v4.0@beta || ^v4.0@dev",
        "vonage/client": "^2.0",
        "twilio/sdk": "~6.0",
        "arcturial/clickatell": "~3.0"
    },
    "require-dev": {
        "laravel/pint": "^1.2",
        "larastan/larastan": "^2.4.0",
        "sampoyigi/testbench": "dev-main as 1.0",
        "pestphp/pest-plugin-laravel": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "IgniterLabs\\SmsNotify\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IgniterLabs\\SmsNotify\\Tests\\": "tests/"
        }
    },
    "extra": {
        "tastyigniter-extension": {
            "code": "igniterlabs.smsnotify",
            "name": "SMS Notify",
            "icon": {
                "class": "fa fa-sms",
                "backgroundColor": "#147EFB",
                "color": "#FFFFFF"
            },
            "homepage": "https://tastyigniter.com/marketplace/item/igniterlabs-smsnotify"
        },
        "branch-alias": {
            "dev-master": "4.0.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "composer/installers": true
        },
        "sort-packages": true
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint",
        "static": "vendor/bin/phpstan analyse --ansi --memory-limit 1056M"
    },
    "repositories": {
        "core": {
            "type": "path",
            "url": "../../../core/"
        },
        "packages": {
            "type": "path",
            "url": "../../../packages/*/*/"
        }
    }
}